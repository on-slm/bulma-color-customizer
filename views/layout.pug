doctype html
html(class='')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width, initial-scale=1')
      title= title
      link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css')
      // link(rel='stylesheet' href='src/debug.css')
      script(defer src='https://use.fontawesome.com/releases/v5.0.7/js/all.js')
      script(defer src='src/navbar.js' type='text/javascript')
      script.
        function getCookie(cname) {
          var name = cname + "=";
          var ca = document.cookie.split(';');
          for(var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
              c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
              return c.substring(name.length, c.length);
            }
          }
          return "";
        }
        if (getCookie('user') !== 'nula') {
          var exp = new Date(Date.now() + (1000 * 60 * 60 * 24 * 365));
          document.cookie = 'user=nula;expires=' + exp.toUTCString() + ';path=/';
        }
  body(class='')
    include includes/header.pug
    include includes/main.pug
    include includes/footer.pug
